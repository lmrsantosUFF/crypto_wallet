<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x20",
          alt: coin.description %></td>
        <td><%= link_to "Show", coin %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New coin", new_coin_path %>
